<% content_for :home do %>
  <%= render 'flashes' %>
  <div class="splash vision">
    <%= render 'splash_header' %>
    <div class="contact-form">
      <h2><%= t '.title' %></h2>
      <%= simple_form_for @contact do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :name, autofocus: true %>
          <%= f.input :email %>
          <%= f.input :subject %>
          <%= f.input :message %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, t('.submit') %>
        </div>
      <% end %>
    </div>
    <%= render 'splash_footer' %>
  </div>
<% end %>
