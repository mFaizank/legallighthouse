<h2>Edit service</h2>

<%= simple_form_for @service, method: :put, validate: true do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :specialization, collection: @lawyer.areas.map(&:name),
      label: 'Area of law' %>
    <%= f.input :name, autofocus: true %>
    <%= f.input :description, as: :text %>
    <%= f.input :fixed_fee %>
    <%= f.input :case_specific %>
    <%= f.input :starting_at %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Save' %>
  </div>
<% end %>
