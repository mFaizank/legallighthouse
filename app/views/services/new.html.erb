<h2>Add service</h2>

<%= link_to 'Back to services', services_path %>

<%= simple_form_for @service, validate: true do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :specialization, collection: @lawyer.areas.map(&:name),
      label: 'Area of law' %>
    <%= f.input :name, autofocus: true %>
    <%= f.input :description, as: :text %>
    <%= f.input :fixed_fee %>
    <%= f.input :case_specific %>
    <%= f.input :starting_at %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Add' %>
  </div>
<% end %>
