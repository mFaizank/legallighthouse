<h2>Client sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <p>Please enter the following information to begin your sign-up process:</p>
    <%= f.input :business, label: 'This is a business account' %>
    <%= f.input :name, required: true %>
    <%= f.input :first_name, label: 'Your name' %>
    <%= f.input :last_name, label: 'Your last name' %>
    <%= f.input :title, label: 'Your title', required: true %>
    <%= f.input :email, label: 'Your email address', required: true %>
    <%= f.input :password, label: 'Your password', required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, label: 'Confirm you password', required: true %>
    <%= f.input :phone_number, label: 'Your phone number' %>
    <%= f.input :postal_code, label: 'Your postal code' %>
    <%= f.input :occupation, label: 'Your occupation' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>
